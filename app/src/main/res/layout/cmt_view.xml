<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:padding="5dp">

            <ImageView
                android:id="@+id/profileimg"
                android:layout_width="53dp"
                android:layout_height="47dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/likeEmogiee"
                android:layout_width="19dp"
                android:layout_height="19dp"
                app:layout_constraintBottom_toBottomOf="@+id/Emogiee"
                app:layout_constraintStart_toEndOf="@+id/profileimg"
                app:layout_constraintTop_toTopOf="@+id/Emogiee"
                app:srcCompat="@drawable/likeemogie" />

            <ImageView
                android:id="@+id/Emogiee"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginStart="4dp"
                app:layout_constraintBottom_toBottomOf="@+id/Emogie"
                app:layout_constraintStart_toEndOf="@+id/likeEmogiee"
                app:layout_constraintTop_toTopOf="@+id/Emogie"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/emojiheart" />

            <TextView
                android:id="@+id/commantairet"
                android:layout_width="252dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bgcommantaire"
                android:fontFamily="@font/roboto_condensed_bold"
                android:padding="10dp"
                android:text="TextView TextView TextView TextView TextView TextView TextView TextView TextView TextView TextView TextView "
                android:textColor="@color/white"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/profileimg"
                app:layout_constraintTop_toTopOf="@+id/profileimg"
                tools:layout_editor_absoluteY="5dp" />

            <ImageView
                android:id="@+id/Emogie"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toEndOf="@+id/Emogiee"
                app:layout_constraintTop_toBottomOf="@+id/commantairet"
                app:srcCompat="@drawable/loveemogie" />

            <TextView
                android:id="@+id/replayBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/electrolize"
                android:text="Replay"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@+id/Emogie"
                app:layout_constraintEnd_toEndOf="@+id/commantairet"
                app:layout_constraintTop_toTopOf="@+id/Emogie" />

            <TextView
                android:id="@+id/cmtCountReactions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/electrolize"
                android:text="100K"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@+id/Emogie"
                app:layout_constraintStart_toEndOf="@+id/Emogie"
                app:layout_constraintTop_toTopOf="@+id/Emogie" />

            <TextView
                android:id="@+id/cmtCountCmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/electrolize"
                android:text="10K"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@+id/replayBtn"
                app:layout_constraintEnd_toStartOf="@+id/replayBtn"
                app:layout_constraintTop_toTopOf="@+id/replayBtn" />

            <TextView
                android:id="@+id/usernameCmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/roboto_condensed_bold"
                android:text="Username"
                android:textColor="@color/white"
                android:textSize="8sp"
                app:layout_constraintStart_toEndOf="@+id/profileimg"
                app:layout_constraintTop_toTopOf="@+id/commantairet" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>